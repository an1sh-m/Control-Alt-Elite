<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="brainbrawl.ui.HomeController"
            stylesheets="@/BrainBrawl/styles/home.css"
            prefWidth="1200" prefHeight="720">

    <top>
        <HBox id="titleBar" spacing="12" alignment="CENTER_LEFT">
            <Label fx:id="appTitle" id="appTitle" text="BRAIN BRAWL"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <HBox spacing="12">
                <Label text="👤" styleClass="roundIcon"/>
                <Label text="⚙️" styleClass="roundIcon"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <HBox spacing="24" alignment="TOP_CENTER">
            <!-- LEFT: Category panel -->
            <VBox spacing="18" alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
                <VBox styleClass="panel" spacing="16">
                    <Label text="SELECT A CATEGORY" styleClass="panel-title"/>
                    <GridPane hgap="18" vgap="18">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>

                        <!-- Maths -->
                        <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="10" alignment="CENTER">
                            <StackPane onMouseClicked="#onMaths" styleClass="category">
                                <StackPane styleClass="iconCircle"><Label text="➕➖"/></StackPane>
                            </StackPane>
                            <Label text="Maths" styleClass="category-label"/>
                        </VBox>

                        <!-- General -->
                        <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="10" alignment="CENTER">
                            <StackPane onMouseClicked="#onGeneral" styleClass="category">
                                <StackPane styleClass="iconCircle"><Label text="💡"/></StackPane>
                            </StackPane>
                            <Label text="General" styleClass="category-label"/>
                        </VBox>

                        <!-- Geography -->
                        <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"
                              spacing="10" alignment="CENTER">
                            <StackPane onMouseClicked="#onGeography" styleClass="category" maxWidth="220">
                                <StackPane styleClass="iconCircle"><Label text="🌍"/></StackPane>
                            </StackPane>
                            <Label text="Geography" styleClass="category-label"/>
                        </VBox>
                    </GridPane>
                </VBox>
            </VBox>

            <!-- RIGHT: History panel -->
            <VBox styleClass="panel" spacing="14" alignment="TOP_LEFT" prefWidth="420">
                <Label text="RECENT GAME HISTORY" styleClass="panel-title"/>
                <VBox fx:id="historyBox" spacing="10"/>
                <Pane minHeight="8"/>
                <Button text="MORE INSIGHTS" onAction="#onMoreInsights" styleClass="primaryBtn" maxWidth="Infinity"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
